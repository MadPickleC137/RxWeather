<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Base.Theme.RxWeather" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="appBarLayoutStyle">@style/BaseAppbarLayoutStyle</item>
        <item name="toolbarStyle">@style/BaseToolbarStyle</item>
    </style>

    <style name="Theme.RxWeather" parent="Base.Theme.RxWeather" />

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="BaseTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="BaseTextStyle.Title1">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="BaseAppbarLayoutStyle" parent="Widget.MaterialComponents.AppBarLayout.Surface">
        <item name="expanded">true</item>
        <item name="elevation">1dp</item>
    </style>
    <style name="BaseToolbarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/toolbar_background</item>
        <item name="android:elevation">1dp</item>
        <item name="layout_collapseMode">none</item>
        <item name="titleCentered">true</item>
        <item name="titleTextAppearance">@style/Toolbar.TitleText</item>
    </style>
</resources>